<% content_for :page_title do %>
  <%= link_to Spree.t(:suppliers), admin_suppliers_path %> / <%= link_to @supplier.name, edit_admin_supplier_path(@supplier) %> /
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_product_tabs">
    <%= content_tag :li, class: ('active' if current == :details) do %>
      <%= link_to_with_icon 'edit', Spree.t(:details), edit_admin_supplier_path(@supplier) %>
    <% end if can?(:admin, Spree::Supplier) %>
    <%= content_tag :li, class: ('active' if current == :pricing_tier) do %>
      <%= link_to_with_icon 'usd', Spree.t(:pricing_tiers), spree.admin_supplier_pricing_tiers_path(@supplier) %>
    <% end if can?(:admin, Spree::Supplier) %>
  </ul>
<% end %>
